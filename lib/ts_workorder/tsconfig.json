{
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "lib": [
      "es2020"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*"
  ]
}
